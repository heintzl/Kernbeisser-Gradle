<Configuration monitorInterval="60">
  <Properties>
    <Property name="log-path">PropertiesConfiguration</Property>
  </Properties>
  <Appenders>
    <Console name="Console-Appender" target="SYSTEM_OUT">
      <PatternLayout>
        <pattern>
          [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
        </pattern>>
      </PatternLayout>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.hibernate.SQL" level="info" additivity="false">
      <AppenderRef ref="Console-Appender"/>
    </Logger>
    <Logger name="org.hibernate.type.descriptor.sql" level="debug" additivity="false">
      <AppenderRef ref="Console-Appender"/>
    </Logger>
    <Logger name="log4j.logger.com.jaspersoft.commons.semantic.datasource.impl.
    SemanticLayerSecurityResolverImpl" level="debug" additivity="false">
      <AppenderRef ref="Console-Appender"/>
    </Logger>
    <Logger name="log4j.logger.com.jaspersoft.commons.semantic.dsimpl.JdbcTableDataSet" level="debug" additivity="false">
      <AppenderRef ref="Console-Appender"/>
    </Logger>
    <Logger name="log4j.logger.com.jaspersoft.commons.util.JSControlledJdbcQueryExecuter" level="debug" additivity="false">
      <AppenderRef ref="Console-Appender"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="Console-Appender"/>
    </Root>
  </Loggers>
</Configuration>