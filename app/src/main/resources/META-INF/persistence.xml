<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="Kernbeisser">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>kernbeisser.DBEntities.Offer</class>
        <class>kernbeisser.DBEntities.Supplier</class>
        <class>kernbeisser.DBEntities.PriceList</class>
        <class>kernbeisser.DBEntities.CatalogEntry</class>
        <class>kernbeisser.DBEntities.Article</class>
        <class>kernbeisser.DBEntities.User</class>
        <class>kernbeisser.DBEntities.IgnoredDifference</class>
        <class>kernbeisser.DBEntities.UserGroup</class>
        <class>kernbeisser.DBEntities.ShoppingItem</class>
        <class>kernbeisser.DBEntities.SaleSession</class>
        <class>kernbeisser.DBEntities.Purchase</class>
        <class>kernbeisser.DBEntities.Job</class>
        <class>kernbeisser.DBEntities.Transaction</class>
        <class>kernbeisser.DBEntities.SurchargeGroup</class>
        <class>kernbeisser.DBEntities.PreOrder</class>
        <class>kernbeisser.DBEntities.Permission</class>
        <class>kernbeisser.DBEntities.Offer</class>
        <class>kernbeisser.DBEntities.SettingValue</class>
        <class>kernbeisser.DBEntities.SystemSetting</class>
        <class>kernbeisser.DBEntities.UserSettingValue</class>
        <class>kernbeisser.DBEntities.Shelf</class>
        <class>kernbeisser.DBEntities.ArticleStock</class>
        <class>kernbeisser.DBEntities.Shelf</class>
        <class>kernbeisser.DBEntities.IgnoredDialog</class>
        <class>kernbeisser.DBEntities.ArticlePrintPool</class>
        <class>kernbeisser.DBEntities.Post</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="jakarta.persistence.sql-load-script-source" value="META-INF/data.sql"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.auto" value="create"/>
            <property name="hibernate.generate_statistics" value="false"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.jpa.static_metamodel.population" value="disabled"/>
            <!--
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            -->
        </properties>
    </persistence-unit>
</persistence>